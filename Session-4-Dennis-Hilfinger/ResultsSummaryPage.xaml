<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Session_4_Dennis_Hilfinger.ResultsSummaryPage"
             Title="Results Summary">
    <VerticalStackLayout>
        <HorizontalStackLayout
            HorizontalOptions="Center"
            Spacing="50"
            Margin="0, 50, 0, 0">
            <Button 
                Text="View Results Summary"
                WidthRequest="200"
                HeightRequest="50"/>
            <Button 
                Text="View Detailed Results"
                WidthRequest="200"
                HeightRequest="50"
                Clicked="DetailedResults"/>
            <Button 
                Text="Exit"
                WidthRequest="150"
                HeightRequest="50"
                Clicked="Exit"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>